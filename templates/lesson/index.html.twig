{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}

{% block body %}
    <div class="jumbotron text-center">
        <div class="container">
            {{ form_start(form) }}
                <div class="form-row align-items-end">
                    <div class="col">
                        {{ form_row(form.grade) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.type) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.subject) }}
                    </div>
                    <div class="col form-group">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form.tags) }}
                    </div>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
    <div class="container">
        <h1 class="text-center">Tous les cours</h1>

        <div class="row flex mt-5">

            {% for lesson in lessons  %}
                <div class="col-3">
                    {% include "lesson/_lesson.html.twig"  %}
                </div>
            {% endfor %}

        </div>

        <div class="pagination">
            {{ knp_pagination_render(lessons) }}
        </div>
    </div>

{% endblock %}

{%  block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css">
{%  endblock %}

{% block javascripts %}
{%  endblock %}