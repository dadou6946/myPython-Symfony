<div class="card mb-4">
    <div class="card-body">

        <h5 class="card-title">
            <a href="{{ path('lesson.show', {id: lesson.id, slug: lesson.slug}) }}">
                {{ lesson.title }}
            </a>
        </h5>
        <p class="card-text primary">
            {{ lesson.grade }} : {{ lesson.type }}
        </p>
        <p class="card-text">{{ lesson.content }}</p>
    </div>
</div>
